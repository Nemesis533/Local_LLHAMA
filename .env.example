# Home Assistant Configuration
# Your Home Assistant base URL (e.g., http://homeassistant.local:8123)
HA_BASE_URL=http://homeassistant.local:8123

# Your Home Assistant Long-Lived Access Token
# Generate one from: Home Assistant -> Profile -> Long-Lived Access Tokens
HA_TOKEN=your_home_assistant_token_here

# Ollama Configuration (if using Ollama)
# The IP address and port of your Ollama server (e.g., 192.168.88.239:11434)
OLLAMA_IP=192.168.88.239:11434

# Web Server Security
# Comma-separated list of allowed IP prefixes for web UI access
# Example: 192.168.1.,127.0.0.1,10.0.0.
ALLOWED_IP_PREFIXES=192.168.88.,127.0.0.1

# Authentication Configuration
# Secret key for session encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_generate_one

# Session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Default admin credentials (used only on first run)
# Change these immediately after first login!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeme123

# Password Reset (REMOVE AFTER USE!)
# Set this to reset admin password, then remove from .env for security
# RESET_ADMIN_PASSWORD=your_new_password_here

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=llhama_usr
PG_PASSWORD=your_postgres_password_here
PG_DATABASE=llhama
